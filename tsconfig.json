{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "exclude": [
    "node_modules",
    "dist",
    "public",

    // ‚≠ê These prevent Cloudflare from type-checking server-only code
    "index.ts",
    "server.ts",
    "server",
    "src/server",
    "src/server/**/*",
    "**/server/**/*",
    "**/*.server.ts"
  ]
}
